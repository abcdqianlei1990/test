<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 当前薪资 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/fragment_userinfo_remark_currentsalary_title"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="当前薪资"
                android:textColor="@color/black333333"
                android:textSize="@dimen/sp15" />

            <TextView
                android:id="@+id/fragment_userinfo_remark_currentsalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/fragment_userinfo_remark_currentsalary_arrow"
                android:layout_toRightOf="@+id/fragment_userinfo_remark_currentsalary_title"
                android:background="@null"
                android:hint="请选择当前薪资"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:textColor="@color/black333333"
                android:textColorHint="@color/blackC0C0C0"
                android:textSize="@dimen/sp15" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/fragment_userinfo_remark_currentsalary_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="12dp"
                android:paddingRight="@dimen/horizontal_margin"
                android:paddingTop="12dp"
                android:src="@mipmap/ic_right_arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/fragment_userinfo_remark_currentsalary_title"
                android:background="@color/commonLineColor" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>