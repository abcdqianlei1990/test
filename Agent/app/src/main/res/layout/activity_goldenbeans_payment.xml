<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/commonBackground">
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/activity_payment_green_bg"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/ic_green_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/activity_payment_yellow_bg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/yellowFFB600"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/activity_payment_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="购买金豆  个"
        android:textSize="@dimen/sp18"
        android:textColor="@color/black333333"
        app:layout_constraintLeft_toLeftOf="@+id/activity_payment_yellow_bg"
        app:layout_constraintRight_toRightOf="@+id/activity_payment_yellow_bg"
        app:layout_constraintTop_toTopOf="@+id/activity_payment_yellow_bg"
        android:layout_marginTop="15dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/activity_payment_line"
        android:layout_width="0dp"
        android:layout_height="@dimen/commonLineHeight"
        android:background="#CEA635"
        app:layout_constraintLeft_toLeftOf="@+id/activity_payment_yellow_bg"
        app:layout_constraintRight_toRightOf="@+id/activity_payment_yellow_bg"
        app:layout_constraintTop_toBottomOf="@+id/activity_payment_count_tv"
        android:layout_marginTop="17dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/activity_payment_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在线支付(元)"
        android:textSize="@dimen/sp15"
        android:textColor="@color/black333333"
        app:layout_constraintLeft_toLeftOf="@+id/activity_payment_yellow_bg"
        app:layout_constraintRight_toRightOf="@+id/activity_payment_yellow_bg"
        app:layout_constraintTop_toBottomOf="@+id/activity_payment_line"
        android:layout_marginTop="17dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/activity_payment_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/sp50"
        android:textColor="@color/redF83232"
        app:layout_constraintLeft_toLeftOf="@+id/activity_payment_yellow_bg"
        app:layout_constraintRight_toRightOf="@+id/activity_payment_yellow_bg"
        app:layout_constraintTop_toBottomOf="@+id/activity_payment_title_tv"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_payment_method_wx_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_payment_yellow_bg"
        android:background="@color/white"
        android:layout_marginTop="39dp">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/activity_payment_method_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_wechat_round"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_payment_method_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp_15"
            app:layout_constraintLeft_toRightOf="@+id/activity_payment_method_icon"
            app:layout_constraintTop_toTopOf="@+id/activity_payment_method_icon"
            app:layout_constraintBottom_toBottomOf="@+id/activity_payment_method_icon"
            android:layout_marginLeft="20dp"/>
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/activity_payment_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/bg_checkbox"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="28dp"
            android:clickable="false"
            android:checked="true"
            />
        <!--<android.support.v7.widget.AppCompatTextView-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="@dimen/commonLineHeight"-->
            <!--app:layout_constraintLeft_toLeftOf="@+id/activity_payment_method_title_tv"-->
            <!--app:layout_constraintRight_toRightOf="parent"-->
            <!--app:layout_constraintBottom_toBottomOf="parent"-->
            <!--android:background="@color/commonLineColor"-->
            <!--/>-->
    </android.support.constraint.ConstraintLayout>

    <!--支付金额确认及支付按钮-->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/white">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_payment_amountTitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp15"
            android:text="实付款："
            android:textColor="@color/black666666"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_payment_actualAmount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_25"
            android:text=""
            android:textColor="@color/redF83232"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/activity_payment_amountTitle_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_payment_pay_btn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="立即支付"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/redFF7731"
            android:paddingRight="29dp"
            android:paddingLeft="29dp"
            android:gravity="center_vertical"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>