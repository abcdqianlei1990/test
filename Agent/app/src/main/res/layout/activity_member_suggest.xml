<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/commonBackground">
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/activity_member_suggest_notice_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="绑定后，被邀请人和邀请人为同一小职姐"
        android:textColor="#E59955"
        android:background="#FFF7E9"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_member_suggest_contentGroup"
        android:layout_below="@+id/activity_member_suggest_notice_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <!--邀请人姓名-->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_member_suggest_nameTitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black333333"
            android:text="邀请人姓名"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="14dp"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_member_suggest_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black333333"
            android:text=""
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/activity_member_suggest_inviteePhoneTitle_tv"
            android:layout_marginLeft="30dp"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_member_suggest_name_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/commonLineColor"
            app:layout_constraintTop_toBottomOf="@+id/activity_member_suggest_nameTitle_tv"
            android:layout_marginTop="14dp"/>

        <!--被邀请人姓名-->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_member_suggest_inviteeNameTitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black333333"
            android:text="被邀请人姓名"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_member_suggest_name_line"
            app:layout_constraintLeft_toLeftOf="@+id/activity_member_suggest_nameTitle_tv"
            />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/activity_member_suggest_inviteeName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black333333"
            android:hint="请输入被邀请人姓名"
            android:background="@null"
            android:textColorHint="@color/black999999"
            android:textSize="@dimen/sp_16"
            android:maxLines="1"
            android:singleLine="true"
            android:maxLength="11"
            app:layout_constraintTop_toTopOf="@+id/activity_member_suggest_inviteeNameTitle_tv"
            app:layout_constraintLeft_toLeftOf="@+id/activity_member_suggest_name_tv"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_member_suggest_inviteeName_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/commonLineColor"
            app:layout_constraintTop_toBottomOf="@+id/activity_member_suggest_inviteeNameTitle_tv"
            android:layout_marginTop="14dp"/>

        <!--被邀请人手机号-->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_member_suggest_inviteePhoneTitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black333333"
            android:text="被邀请人手机号"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_member_suggest_inviteeName_line"
            app:layout_constraintLeft_toLeftOf="@+id/activity_member_suggest_nameTitle_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="14dp"
            />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/activity_member_suggest_inviteePhone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black333333"
            android:hint="请输入被邀请人手机号"
            android:background="@null"
            android:textColorHint="@color/black999999"
            android:maxLines="1"
            android:singleLine="true"
            android:maxLength="11"
            android:inputType="phone"
            android:textSize="@dimen/sp_16"
            app:layout_constraintTop_toTopOf="@+id/activity_member_suggest_inviteePhoneTitle_tv"
            app:layout_constraintLeft_toLeftOf="@+id/activity_member_suggest_name_tv"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/activity_member_suggest_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        style="@style/CommonBottomSubmitBtnStyle"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>