<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/item_beans_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_goldenbean"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="28dp"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_beans_productName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black333333"
        app:layout_constraintLeft_toRightOf="@+id/item_beans_icon"
        app:layout_constraintTop_toTopOf="@+id/item_beans_icon"
        app:layout_constraintBottom_toBottomOf="@+id/item_beans_icon"
        android:layout_marginLeft="10dp"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_beans_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/sp_25"
        android:textColor="@color/redFF7731"
        app:layout_constraintRight_toLeftOf="@+id/item_beans_purchase_btn"
        android:layout_marginRight="19dp"
        app:layout_constraintTop_toTopOf="@+id/item_beans_icon"
        app:layout_constraintBottom_toBottomOf="@+id/item_beans_icon"
        android:layout_marginLeft="10dp"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_beans_purchase_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="购买"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@+id/item_beans_icon"
        app:layout_constraintBottom_toBottomOf="@+id/item_beans_icon"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:background="@color/redFF7731"
        />
</android.support.constraint.ConstraintLayout>