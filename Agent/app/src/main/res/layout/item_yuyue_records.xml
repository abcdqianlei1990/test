<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/yuyue_records_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginTop="13dp"
            android:src="@mipmap/ic_customerdetail_cal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/yuyue_records_mendian_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="9dp"
            android:text="小职姐车墩店 2018.03.08 12:00"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp16"
            app:layout_constraintLeft_toRightOf="@+id/yuyue_records_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/yuyue_records_line"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp1"
            android:layout_marginTop="10dp"
            android:background="@color/commonBackground"
            app:layout_constraintLeft_toLeftOf="@+id/yuyue_records_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yuyue_records_icon" />

        <TextView
            android:id="@+id/yuyue_records_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginTop="12dp"
            android:text="昆山世硕作业员"
            android:textColor="@color/black808080"
            android:textSize="@dimen/sp12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yuyue_records_line" />

        <TextView
            android:id="@+id/yuyue_records_remark_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginTop="4dp"
            android:text="预约人: 小职姐"
            android:textColor="@color/black808080"
            android:textSize="@dimen/sp12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yuyue_records_name_tv" />

        <TextView
            android:id="@+id/yuyue_records_pay_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginTop="4dp"
            android:text="支付状态: --"
            android:textColor="@color/black808080"
            android:textSize="@dimen/sp12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yuyue_records_remark_tv" />

        <TextView
            android:id="@+id/yuyue_records_tuikuan_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginTop="4dp"
            android:text="退款状态: --"
            android:textColor="@color/black808080"
            android:textSize="@dimen/sp12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yuyue_records_pay_status_tv" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_marginTop="22dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yuyue_records_line"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_yuyue_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:textColor="@color/black999999"
                android:textSize="12sp"
                android:visibility="visible" />
            <TextView

                android:id="@+id/yuyue_records_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_green_solid_green_stroke_4corner"
                android:padding="6dp"
                android:text="取消预约"
                android:textColor="@color/green29AC3E"
                android:textSize="@dimen/sp12"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/yuyue_records_split_line"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/commonBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yuyue_records_tuikuan_tv" />
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>