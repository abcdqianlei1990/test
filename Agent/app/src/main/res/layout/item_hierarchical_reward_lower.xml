<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingBottom="13dp">
    <!--日期-->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_hierarchical_reward_lower_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/sp_15"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="14dp"/>
    <!--金额-->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_hierarchical_reward_lower_amountTitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获得培训津贴金额(元）:"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/black666666"
        app:layout_constraintRight_toLeftOf="@+id/item_hierarchical_reward_lower_amount_tv"
        app:layout_constraintTop_toTopOf="@+id/item_hierarchical_reward_lower_amount_tv"
        app:layout_constraintBottom_toBottomOf="@+id/item_hierarchical_reward_lower_amount_tv"
        android:layout_marginRight="6dp"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_hierarchical_reward_lower_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/redFF7731"
        android:textSize="@dimen/sp33"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="11dp"/>
    <!--分割线-->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_hierarchical_reward_lower_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/commonLineColor"
        app:layout_constraintTop_toBottomOf="@+id/item_hierarchical_reward_lower_amount_tv"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <!--培训队员姓名：-->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_hierarchical_reward_lower_agentNameTitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="培训队员姓名："
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/item_hierarchical_reward_lower_line"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_hierarchical_reward_lower_agentName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/sp_14"
        android:textColor="@color/green29AC3E"
        app:layout_constraintTop_toTopOf="@+id/item_hierarchical_reward_lower_agentNameTitle_tv"
        app:layout_constraintBottom_toBottomOf="@+id/item_hierarchical_reward_lower_agentNameTitle_tv"
        app:layout_constraintLeft_toRightOf="@+id/item_hierarchical_reward_lower_agentNameTitle_tv"
        />
    <!--用户姓名-->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_hierarchical_reward_lower_customerName_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="用户姓名："
        android:textSize="@dimen/sp_14"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/item_hierarchical_reward_lower_agentNameTitle_tv"
        app:layout_constraintBottom_toBottomOf="@+id/item_hierarchical_reward_lower_agentNameTitle_tv"
        app:layout_constraintLeft_toRightOf="@+id/item_hierarchical_reward_lower_agentName_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="30dp"
        />
</android.support.constraint.ConstraintLayout>