<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_scene_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电话被挂断"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="30dp"/>
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/item_scene_rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        app:srcCompat="@mipmap/ic_select"/>
    <View
        android:id="@+id/item_scene_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/commonLineColor"
        android:layout_alignLeft="@+id/item_scene_content_tv"
        android:layout_below="@+id/item_scene_content_tv"/>
</RelativeLayout>