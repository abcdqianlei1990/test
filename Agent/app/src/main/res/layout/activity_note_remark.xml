<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:zhy="http://schemas.android.com/tools"
    android:background="@color/commonBackground"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/commonBackground"
            android:orientation="vertical">
            <!--沟通方式-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                >
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/activity_note_communicate_title_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="※"
                    android:textColor="#FF5B31"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="14dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/activity_note_communicate_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/horizontal_margin"
                    android:text="沟通方式"
                    android:textColor="@color/black333333"
                    android:textSize="@dimen/sp16"
                    android:layout_toRightOf="@+id/activity_note_communicate_title_ic"
                    android:layout_marginTop="14dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/commonLineColor"
                    android:layout_below="@+id/activity_note_communicate_title_ic"
                    android:layout_marginTop="14dp"/>
                <RadioGroup
                    android:id="@+id/activity_note_communicate_radiogroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="14dp"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/activity_note_communicate_telephone_rb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="9dp"
                        android:paddingRight="9dp"
                        android:text="手机"
                        android:button="@null"
                        android:textColor="@drawable/bg_radiobtn_text"
                        android:background="@drawable/bg_radiobtn_background"
                        android:checked="false"
                        android:layout_marginRight="10dp"/>
                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/activity_note_communicate_phone_rb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="9dp"
                        android:paddingRight="9dp"
                        android:text="固话"
                        android:button="@null"
                        android:textColor="@drawable/bg_radiobtn_text"
                        android:background="@drawable/bg_radiobtn_background"
                        android:checked="false"
                        android:layout_marginRight="10dp"/>
                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/activity_note_communicate_wx_rb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="9dp"
                        android:paddingRight="9dp"
                        android:text="微信"
                        android:button="@null"
                        android:textColor="@drawable/bg_radiobtn_text"
                        android:background="@drawable/bg_radiobtn_background"
                        android:checked="false"/>
                </RadioGroup>
            </RelativeLayout>

            <!--沟通结果-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/activity_note_communicate_result_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="※"
                    android:textColor="#FF5B31"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="14dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/activity_note_communicate_result_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/horizontal_margin"
                    android:text="沟通结果"
                    android:textColor="@color/black333333"
                    android:textSize="@dimen/sp16"
                    android:layout_toRightOf="@+id/activity_note_communicate_result_ic"
                    android:layout_marginTop="14dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/commonLineColor"
                    android:layout_below="@+id/activity_note_communicate_result_ic"
                    android:layout_marginTop="14dp"/>
                <RadioGroup
                    android:id="@+id/activity_note_communicate_result_radiogroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="14dp"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/activity_note_communicate_result_nav_rb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="9dp"
                        android:paddingRight="9dp"
                        android:text="未接通"
                        android:button="@null"
                        android:textColor="@drawable/bg_radiobtn_text"
                        android:background="@drawable/bg_radiobtn_background"
                        android:checked="false"
                        android:layout_marginRight="10dp"/>
                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/activity_note_communicate_result_pos_rb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="9dp"
                        android:paddingRight="9dp"
                        android:text="已接通"
                        android:button="@null"
                        android:textColor="@drawable/bg_radiobtn_text"
                        android:background="@drawable/bg_radiobtn_background"
                        android:checked="false"
                        />
                </RadioGroup>
            </RelativeLayout>

            <!--具体情况-->
            <RelativeLayout
                android:id="@+id/activity_note_communicate_scene_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/activity_note_communicate_scene_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="※"
                    android:textColor="#FF5B31"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="14dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/activity_note_communicate_scene_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/horizontal_margin"
                    android:text="具体情况"
                    android:textColor="@color/black333333"
                    android:textSize="@dimen/sp16"
                    android:layout_toRightOf="@+id/activity_note_communicate_scene_ic"
                    android:layout_marginTop="14dp"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/activity_note_communicate_scene_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black333333"
                    android:textSize="@dimen/sp_16"
                    android:layout_toLeftOf="@+id/activity_note_communicate_scene_arrow"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/activity_note_communicate_scene_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_right_arrow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:paddingRight="14dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/commonLineColor"
                    android:layout_below="@+id/activity_note_communicate_scene_ic"
                    android:layout_marginTop="14dp"/>

            </RelativeLayout>

            <!--未约好原因-->
            <RelativeLayout
                android:id="@+id/activity_note_appointment_fail_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone">
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/activity_note_appointment_fail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/black333333"
                    android:text="请选择没约好的原因（可多选）"
                    android:paddingTop="14dp"
                    android:paddingLeft="14dp"
                    android:paddingBottom="14dp"
                    android:layout_toLeftOf="@+id/activity_note_appointment_fail_arrow"/>
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/activity_note_appointment_fail_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_right_arrow"
                    android:layout_alignParentRight="true"
                    android:paddingTop="14dp"
                    android:paddingRight="14dp"
                    android:paddingLeft="14dp"
                    android:paddingBottom="14dp"/>
                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/activity_appointmentfail_flowlayout"
                    zhy:max_select="-1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_below="@+id/activity_note_appointment_fail_arrow"/>
            </RelativeLayout>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="沟通记录"
                android:textColor="@color/black333333"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="14dp"/>
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/activity_note_communicate_record_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text=""
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black333333"/>


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/activity_note_remark_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_green_radius_0"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/sp18" />
</LinearLayout>