<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="166dp"
    android:padding="7dp">

    <ImageView
        android:id="@+id/iv_job_source"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:src="@mipmap/ic_default_logo"
        android:scaleType="fitXY" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="1dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_job_source_user_is_look"
            android:layout_width="56dp"
            android:layout_height="18dp"
            android:background="@color/black"
            android:gravity="center"
            android:text="@string/job_source_user_is_look"
            android:textColor="@color/white"
            android:textSize="11sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/ic_job_source_play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@mipmap/ic_btn_play" />

    <ImageView
        android:id="@+id/job_source_download_select"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:srcCompat="@mipmap/ic_select" />
</RelativeLayout>