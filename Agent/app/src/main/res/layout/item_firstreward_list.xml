<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_firstreward_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/sp15"
        android:textColor="@color/black333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="14dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获得奖励(元）:"
        android:textSize="@dimen/sp12"
        android:textColor="@color/black666666"
        app:layout_constraintRight_toLeftOf="@+id/item_firstreward_amount_tv"
        app:layout_constraintTop_toTopOf="@+id/item_firstreward_amount_tv"
        app:layout_constraintBottom_toBottomOf="@+id/item_firstreward_amount_tv"
        android:layout_marginRight="8dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_firstreward_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/redFF7731"
        android:textSize="@dimen/sp33"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="18dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_firstreward_line_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonLineHeight"
        android:background="@color/commonLineColor"
        app:layout_constraintTop_toBottomOf="@+id/item_firstreward_amount_tv"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_firstreward_source_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="奖励来源："
        android:textColor="@color/black333333"
        android:textSize="@dimen/sp11"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/yellowFFFAB8"
        app:layout_constraintTop_toBottomOf="@+id/item_firstreward_line_tv"
        android:layout_marginTop="14dp"
        app:layout_constraintLeft_toLeftOf="@+id/item_firstreward_date_tv"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_firstreward_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/sp14"
        android:textColor="@color/black333333"
        app:layout_constraintTop_toBottomOf="@+id/item_firstreward_line_tv"
        android:layout_marginTop="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_firstreward_event_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black666666"
        android:textSize="@dimen/sp12"
        app:layout_constraintTop_toBottomOf="@+id/item_firstreward_source_tv"
        app:layout_constraintLeft_toLeftOf="@+id/item_firstreward_source_tv"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="18dp"/>
</android.support.constraint.ConstraintLayout>