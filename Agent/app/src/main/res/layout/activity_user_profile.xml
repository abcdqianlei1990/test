<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/commonBackground">
    <!--实名认证按钮-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_userProfile_realNameBtn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实名认证"
            android:textSize="@dimen/sp15"
            android:textColor="@color/black666666"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingLeft="26dp"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未实名认证，去认证"
            android:textSize="@dimen/sp13"
            android:textColor="@color/redFF7731"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/activity_userProfile_realName_arrow"
            android:layout_marginRight="10dp"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/activity_userProfile_realName_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right_arrow"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="25dp"/>
    </android.support.constraint.ConstraintLayout>
    <!--实名信息-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_userProfile_realNameInfo_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/activity_userProfile_realNameBtn_container"
        app:layout_constraintLeft_toLeftOf="parent">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_userProfile_realName_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实名认证"
            android:textSize="@dimen/sp15"
            android:textColor="@color/black666666"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="26dp"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_userProfile_realName_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/activity_userProfile_realName_title_tv"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="@id/activity_userProfile_realName_title_tv"
            app:layout_constraintBottom_toBottomOf="@+id/activity_userProfile_realName_title_tv"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp12"
            android:text="已认证"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@color/yellowFFFAB8"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_userProfile_realName_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/sp15"
            android:textColor="@color/black333333"
            app:layout_constraintTop_toBottomOf="@+id/activity_userProfile_realName_title_tv"
            android:layout_marginTop="18dp"
            app:layout_constraintLeft_toLeftOf="@+id/activity_userProfile_realName_title_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="23dp"
            />
    </android.support.constraint.ConstraintLayout>
    <!--人脸认证-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_userProfile_faceBtn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/activity_userProfile_realNameInfo_container"
        app:layout_constraintLeft_toLeftOf="parent">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刷脸认证"
            android:textSize="@dimen/sp15"
            android:textColor="@color/black666666"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingLeft="26dp"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去认证，请刷脸认证"
            android:textSize="@dimen/sp13"
            android:textColor="@color/redFF7731"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/activity_userProfile_face_arrow"
            android:layout_marginRight="10dp"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/activity_userProfile_face_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right_arrow"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="25dp"/>
    </android.support.constraint.ConstraintLayout>
    <!--人脸认证结果-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_userProfile_face_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/activity_userProfile_faceBtn_container"
        app:layout_constraintLeft_toLeftOf="@+id/activity_userProfile_faceBtn_container">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_userProfile_face_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刷脸认证"
            android:textSize="@dimen/sp15"
            android:textColor="@color/black666666"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="26dp"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_userProfile_face_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/activity_userProfile_face_title_tv"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="@id/activity_userProfile_face_title_tv"
            app:layout_constraintBottom_toBottomOf="@+id/activity_userProfile_face_title_tv"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp12"
            android:text="已认证"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@color/yellowFFFAB8"/>
    </android.support.constraint.ConstraintLayout>
    <!--个人信息-->
    <!--昵称-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_userProfile_name_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_userProfile_face_container"
        app:layout_constraintLeft_toLeftOf="parent">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="@dimen/sp15"
            android:textColor="@color/black666666"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingLeft="26dp"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_userProfile_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/sp15"
            android:textColor="@color/black666666"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="25dp"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/commonLineHeight"
            android:background="@color/commonLineColor"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <!--手机号-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_userProfile_phone_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/activity_userProfile_name_container"
        app:layout_constraintLeft_toLeftOf="parent">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="@dimen/sp15"
            android:textColor="@color/black666666"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingLeft="26dp"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_userProfile_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:inputType="number"
            android:textSize="@dimen/sp15"
            android:textColor="@color/black666666"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="25dp"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/commonLineHeight"
            android:background="@color/commonLineColor"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <!--微信号-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_userProfile_wx_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/activity_userProfile_phone_container"
        app:layout_constraintLeft_toLeftOf="@+id/activity_userProfile_phone_container">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信号"
            android:textSize="@dimen/sp15"
            android:textColor="@color/black666666"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingLeft="26dp"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_userProfile_wx_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:inputType="number"
            android:textSize="@dimen/sp15"
            android:textColor="@color/black666666"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="25dp"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/commonLineHeight"
            android:background="@color/commonLineColor"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <!--银行卡，只有实名后才能进行银行卡认证-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_userProfile_bankcardBtn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/activity_userProfile_wx_container"
        app:layout_constraintLeft_toLeftOf="parent">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行卡"
            android:textSize="@dimen/sp15"
            android:textColor="@color/black666666"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingLeft="26dp"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去完善"
            android:textSize="@dimen/sp13"
            android:textColor="@color/redFF7731"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/activity_userProfile_bankcard_arrow"
            android:layout_marginRight="10dp"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/activity_userProfile_bankcard_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right_arrow"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="25dp"/>
    </android.support.constraint.ConstraintLayout>
    <!--银行卡信息-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_userProfile_bankcardInfo_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/activity_userProfile_bankcardBtn_container"
        app:layout_constraintLeft_toLeftOf="parent">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_userProfile_bankcard_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行卡"
            android:textSize="@dimen/sp15"
            android:textColor="@color/black666666"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="26dp"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_userProfile_bankcard_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/activity_userProfile_bankcard_title_tv"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="@id/activity_userProfile_bankcard_title_tv"
            app:layout_constraintBottom_toBottomOf="@+id/activity_userProfile_bankcard_title_tv"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp12"
            android:text="已添加"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@color/yellowFFFAB8"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_userProfile_bankcard_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/sp15"
            android:textColor="@color/black333333"
            app:layout_constraintTop_toBottomOf="@+id/activity_userProfile_bankcard_title_tv"
            android:layout_marginTop="18dp"
            app:layout_constraintLeft_toLeftOf="@+id/activity_userProfile_bankcard_title_tv"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_userProfile_bankcard_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/sp15"
            android:textColor="@color/black333333"
            app:layout_constraintTop_toBottomOf="@+id/activity_userProfile_bankcard_name_tv"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/activity_userProfile_bankcard_title_tv"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_userProfile_bankcard_bankName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/sp15"
            android:textColor="@color/black333333"
            app:layout_constraintTop_toBottomOf="@+id/activity_userProfile_bankcard_num_tv"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/activity_userProfile_bankcard_title_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="23dp"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>