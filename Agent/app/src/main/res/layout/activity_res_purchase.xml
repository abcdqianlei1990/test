<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/commonBackground">
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/activity_resPurchase_notice_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="温馨提示：买前必读 购买规则说明"
        android:textSize="@dimen/sp12"
        android:textColor="#E59955"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="14dp"
        android:background="#FFF7E9"/>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/activity_resPurchase_smartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_resPurchase_notice_tv"
        app:layout_constraintBottom_toTopOf="@+id/activity_resPurchase_bottomBtnGroup">
        <com.ye.widget.StatusLayout
            android:id="@+id/activity_resPurchase_statusLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:visibility="visible"
                android:id="@+id/activity_resPurchase_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </com.ye.widget.StatusLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <!--底部按钮-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_resPurchase_bottomBtnGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/activity_resPurchase_smartRefreshLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        >
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_resPurchase_costTitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共计0人，合计："
            android:textColor="@color/black666666"
            android:textSize="@dimen/sp15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="25dp"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_resPurchase_cost_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0金豆"
            android:textColor="@color/redFF7731"
            android:textSize="@dimen/sp20"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/activity_resPurchase_costTitle_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_resPurchase_purchase_btn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="马上抢购"
            android:textSize="@dimen/sp20"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_vertical"
            android:paddingRight="29dp"
            android:paddingLeft="29dp"
            android:textColor="@color/white"
            android:background="@color/redFF7731"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>