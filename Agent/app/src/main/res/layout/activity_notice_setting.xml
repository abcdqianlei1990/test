<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/commonBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="14dp"
                android:paddingLeft="@dimen/horizontal_margin"
                android:paddingTop="14dp"
                android:text="提醒时间"
                android:textColor="@color/black333333"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/activity_notice_setting_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/activity_notice_setting_right_arrow"
                android:hint="请选择跟踪的时间"
                android:paddingBottom="14dp"
                android:paddingTop="14dp"
                android:textColorHint="@color/black808080" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/activity_notice_setting_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="14dp"
                android:paddingRight="@dimen/horizontal_margin"
                android:paddingTop="14dp"
                android:src="@mipmap/ic_right_arrow" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginTop="16dp"
            android:text="提醒内容"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp16" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/activity_notice_setting_remark_ed"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:gravity="top"
            android:maxLength="200"
            android:paddingLeft="@dimen/horizontal_margin"
            android:paddingRight="@dimen/horizontal_margin"
            android:paddingTop="11dp"
            android:text=""
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/activity_notice_setting_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/green29AC3E"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18" />
    </RelativeLayout>

</LinearLayout>