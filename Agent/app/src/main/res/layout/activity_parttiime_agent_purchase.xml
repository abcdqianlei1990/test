<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/commonBackground">
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/activity_parttimeAgentPurchase_bg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/ic_parttiime_agent_bg"
        android:scaleType="fitXY"
        android:background="@drawable/shape_parttimeagent_bg"/>
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/activity_parttimeAgentPurchase_bg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/activity_parttimeAgentPurchase_bg"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@mipmap/ic_parttiime_agent_bg2"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/activity_parttimeAgentPurchase_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="兼职小职姐"
        android:textSize="@dimen/sp_25"
        android:textColor="@color/black333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        android:textStyle="bold"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/activity_parttimeAgentPurchase_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="永久资格"
        android:textSize="@dimen/sp15"
        android:textColor="@color/black333333"
        app:layout_constraintTop_toBottomOf="@+id/activity_parttimeAgentPurchase_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="3dp"
        />
    <LinearLayout
        android:id="@+id/activity_parttimeAgentPurchase_amountContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/activity_parttimeAgentPurchase_subtitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textSize="@dimen/sp33"
            android:textColor="@color/redF83232"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_parttimeAgentPurchase_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/sp55"
            android:textColor="@color/redF83232"

            />
    </LinearLayout>

    <!--权益-->
    <LinearLayout
        android:id="@+id/activity_parttimeAgentPurchase_right1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/activity_parttimeAgentPurchase_bg2"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/activity_parttimeAgentPurchase_right2"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:orientation="vertical"
        android:gravity="center">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/activity_parttimeAgentPurchase_right1_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_parttime_right1"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_parttimeAgentPurchase_right_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="送300金豆"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp15"
            android:layout_marginTop="8dp"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_parttimeAgentPurchase_right_desc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优质流量\n任性购买"
            android:textColor="@color/black666666"
            android:textSize="@dimen/sp12"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_parttimeAgentPurchase_right2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/activity_parttimeAgentPurchase_right1"
        app:layout_constraintLeft_toRightOf="@+id/activity_parttimeAgentPurchase_right1"
        app:layout_constraintRight_toLeftOf="@+id/activity_parttimeAgentPurchase_right3"
        android:orientation="vertical"
        android:gravity="center">
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_parttime_right2"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="高级导师"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp15"
            android:layout_marginTop="8dp"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优质流量\n任性购买"
            android:textColor="@color/black666666"
            android:textSize="@dimen/sp12"
            android:layout_marginTop="5dp"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/activity_parttimeAgentPurchase_right3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/activity_parttimeAgentPurchase_right1"
        app:layout_constraintLeft_toRightOf="@+id/activity_parttimeAgentPurchase_right2"
        app:layout_constraintRight_toLeftOf="@+id/activity_parttimeAgentPurchase_right4"
        android:orientation="vertical"
        android:gravity="center">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/activity_parttimeAgentPurchase_right3_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_parttime_right3"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_parttimeAgentPurchase_right_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="免费工位"
            android:layout_marginTop="8dp"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp15"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_parttimeAgentPurchase_right_desc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="各地门店\n任意选择"
            android:textColor="@color/black666666"
            android:textSize="@dimen/sp12"
            android:layout_marginTop="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/activity_parttimeAgentPurchase_right4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@+id/activity_parttimeAgentPurchase_right1"
        app:layout_constraintLeft_toRightOf="@+id/activity_parttimeAgentPurchase_right3"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/activity_parttimeAgentPurchase_right4_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_parttime_right4"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_parttimeAgentPurchase_right_name4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专属资格"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp15"
            android:layout_marginTop="8dp"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_parttimeAgentPurchase_right_desc4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发展兼职\n获取奖励"
            android:textColor="@color/black666666"
            android:textSize="@dimen/sp12"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <!--支付方式-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_parttimeAgentPurchase_payment_method_wx_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_parttimeAgentPurchase_right1"
        android:background="@color/white"
        android:layout_marginTop="24dp">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/activity_parttimeAgentPurchase_payment_method_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_wechat_round"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_parttimeAgentPurchase_payment_method_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp_15"
            app:layout_constraintLeft_toRightOf="@+id/activity_parttimeAgentPurchase_payment_method_icon"
            app:layout_constraintTop_toTopOf="@+id/activity_parttimeAgentPurchase_payment_method_icon"
            app:layout_constraintBottom_toBottomOf="@+id/activity_parttimeAgentPurchase_payment_method_icon"
            android:layout_marginLeft="20dp"/>
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/activity_parttimeAgentPurchase_payment_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/bg_checkbox"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="28dp"
            android:clickable="false"
            android:checked="true"
            />
        <!--<android.support.v7.widget.AppCompatTextView-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="@dimen/commonLineHeight"-->
        <!--app:layout_constraintLeft_toLeftOf="@+id/activity_parttimeAgentPurchase_payment_method_title_tv"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--android:background="@color/commonLineColor"-->
        <!--/>-->
    </android.support.constraint.ConstraintLayout>

    <!--提示-->
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="兼职小职姐资格一经开通不支持退款，敬请知悉"
        android:textSize="@dimen/sp12"
        android:textColor="@color/black999999"
        app:layout_constraintTop_toBottomOf="@+id/activity_parttimeAgentPurchase_payment_method_wx_container"
        app:layout_constraintLeft_toLeftOf="@+id/activity_parttimeAgentPurchase_payment_method_wx_container"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="24dp"/>

    <!--确认按钮-->
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/activity_parttimeAgentPurchase_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立即支付"
        android:textSize="@dimen/sp18"
        android:textColor="@color/white"
        android:background="@color/green29AC3E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</android.support.constraint.ConstraintLayout>