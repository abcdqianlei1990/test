<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_customer_baseinfo_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="sdfsdfsdfsdf"
        android:textColor="@color/black333333"
        android:textSize="@dimen/sp16"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_customer_phonecall_btn"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_customer_intent_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/yellowFF8500"
        android:text="意向："
        android:textSize="@dimen/sp_12"
        app:layout_constraintTop_toTopOf="@+id/item_customer_baseinfo_tv"
        app:layout_constraintBottom_toBottomOf="@+id/item_customer_baseinfo_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:textColor="@color/white"
        />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/item_customer_level_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/ic_customer_level_a"
        android:layout_marginRight="19dp"
        app:layout_constraintTop_toBottomOf="@+id/item_customer_intent_tv"
        android:layout_marginTop="20dp"
        android:visibility="visible"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_customer_phonecall_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_blue_solid_with_2corner"
        android:textColor="@color/blue577FCC"
        android:textSize="@dimen/sp13"
        android:text="电话"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        app:layout_constraintTop_toBottomOf="@+id/item_customer_level_img"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="14dp"
        app:layout_goneMarginTop="20dp"
        android:layout_marginTop="16dp"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_customer_registinfo_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/item_customer_baseinfo_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_customer_baseinfo_tv"
        android:layout_marginTop="8dp"
        android:text="注册信息"
        android:textSize="@dimen/sp11"
        android:textColor="@color/black333333"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_customer_registinfo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black808080"
        android:textSize="@dimen/sp11"
        app:layout_constraintLeft_toRightOf="@+id/item_customer_registinfo_title_tv"
        app:layout_constraintTop_toTopOf="@+id/item_customer_registinfo_title_tv" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_customer_distribution_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/item_customer_registinfo_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_customer_registinfo_title_tv"
        android:layout_marginTop="5dp"
        android:text="分配时间"
        android:textSize="@dimen/sp11"
        android:textColor="@color/black333333"
        android:visibility="visible"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_customer_distribution_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black808080"
        android:textSize="@dimen/sp11"
        app:layout_constraintLeft_toRightOf="@+id/item_customer_distribution_title_tv"
        app:layout_constraintTop_toTopOf="@+id/item_customer_distribution_title_tv" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_customer_notice_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/item_customer_distribution_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_customer_distribution_title_tv"
        android:layout_marginTop="5dp"
        android:text="最近注记"
        android:textSize="@dimen/sp11"
        android:textColor="@color/black333333"
        android:visibility="visible"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_customer_notice_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/black808080"
        android:textSize="@dimen/sp11"
        android:visibility="visible"
        app:layout_constraintLeft_toRightOf="@+id/item_customer_notice_title_tv"
        app:layout_constraintRight_toLeftOf="@+id/item_customer_phonecall_btn"
        app:layout_constraintTop_toTopOf="@+id/item_customer_notice_title_tv" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_customer_wechat_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/item_customer_notice_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_customer_notice_tv"
        android:layout_marginTop="5dp"
        android:text="微信号"
        android:textSize="@dimen/sp11"
        android:textColor="@color/black333333"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_customer_wechat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black808080"
        android:textSize="@dimen/sp11"
        app:layout_constraintLeft_toRightOf="@+id/item_customer_registinfo_title_tv"
        app:layout_constraintTop_toTopOf="@+id/item_customer_wechat_title_tv" />
</android.support.constraint.ConstraintLayout>