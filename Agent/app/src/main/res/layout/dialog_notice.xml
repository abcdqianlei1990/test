<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:id="@+id/dialog_notice_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/white">
        <TextView
            android:id="@+id/notice_dialog_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black333333"
            android:textSize="15sp"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_gravity="center_horizontal"
            android:lineSpacingExtra="4dp"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/notice_dialog_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black808080"
            android:textSize="17sp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_gravity="center_horizontal"
            android:lineSpacingExtra="5dp"
            android:gravity="center"
            android:visibility="gone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/blackE0E0E0"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/notice_dialog_confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/green29AC3E"
            android:textSize="@dimen/sp18"
            android:text="知道了"
            android:gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"/>
    </LinearLayout>
</LinearLayout>