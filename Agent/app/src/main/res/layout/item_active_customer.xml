<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:paddingBottom="15dp">

    <!--客户信息-->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvActiveCustomerItemPhoneAndName"
        style="@style/TextBlack333333"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="150****3477 王哥(王铁蛋)"
        android:textSize="@dimen/sp16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toLeftOf="@+id/item_active_customer_intent_tv"/>

    <!--意愿等级-->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_active_customer_intent_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/yellowFF8500"
        android:text="意向："
        android:textSize="@dimen/sp_12"
        android:layout_marginRight="15dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvActiveCustomerItemPhoneAndName"
        />

    <!--活跃情况-->
    <View
        android:id="@+id/item_active_customer_activeTitle_v"
        android:layout_width="2dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvActiveCustomerItemPhoneAndName"
        app:layout_constraintLeft_toLeftOf="@+id/tvActiveCustomerItemPhoneAndName"
        android:background="@color/green29AC3E"
        android:layout_marginTop="10dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_active_customer_activeTitle_tv"
        style="@style/TextBlack333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活跃情况"
        android:textSize="11sp"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toTopOf="@+id/item_active_customer_activeTitle_v"
        app:layout_constraintBottom_toBottomOf="@+id/item_active_customer_activeTitle_v"
        app:layout_constraintLeft_toRightOf="@+id/item_active_customer_activeTitle_v"
        android:layout_marginLeft="9dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvActiveCustomerItemActiveNumber"
        style="@style/TextBlack333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFAB8"
        android:paddingLeft="8dp"
        android:layout_marginLeft="8dp"
        android:paddingTop="2dp"
        android:paddingRight="8dp"
        android:paddingBottom="2dp"
        android:text="累计活跃0次"
        android:textColor="@color/FF3333333"
        android:textSize="11sp"
        app:layout_constraintLeft_toRightOf="@+id/item_active_customer_activeTitle_tv"
        app:layout_constraintTop_toTopOf="@+id/item_active_customer_activeTitle_tv"
        app:layout_constraintBottom_toBottomOf="@+id/item_active_customer_activeTitle_tv"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvActiveCustomerItemActiveDetail"
        style="@style/TextBlack808080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        android:lineSpacingMultiplier="1"
        android:text="2018.03.08 12:00 用户15340908899使用小职姐小程序， 快去联系！"
        android:textSize="11sp"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@+id/item_active_customer_activeTitle_tv"
        app:layout_constraintLeft_toLeftOf="@+id/item_active_customer_activeTitle_tv"
        android:layout_marginTop="14dp"/>

    <!--最近注记-->
    <View
        android:id="@+id/item_active_customer_lastMarkTitle_v"
        android:layout_width="2dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvActiveCustomerItemActiveDetail"
        app:layout_constraintLeft_toLeftOf="@+id/item_active_customer_activeTitle_v"
        android:background="@color/green29AC3E"
        android:layout_marginTop="14dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_active_customer_lastMarkTitle_tv"
        style="@style/TextBlack333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最近注记"
        android:textSize="11sp"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toTopOf="@+id/item_active_customer_lastMarkTitle_v"
        app:layout_constraintBottom_toBottomOf="@+id/item_active_customer_lastMarkTitle_v"
        app:layout_constraintLeft_toRightOf="@+id/item_active_customer_lastMarkTitle_v"
        android:layout_marginLeft="9dp"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvActiveCustomerItemLastMark"
        style="@style/TextBlack808080"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无"
        android:textSize="11sp"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@+id/item_active_customer_lastMarkTitle_tv"
        app:layout_constraintLeft_toLeftOf="@+id/item_active_customer_lastMarkTitle_tv"
        android:layout_marginTop="14dp"/>



</android.support.constraint.ConstraintLayout>