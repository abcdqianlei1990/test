<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
   >

    <RelativeLayout
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:paddingTop="14dp"
        android:id="@+id/layBox"
        android:layout_width="match_parent"
        android:layout_height="166dp">

        <RelativeLayout
            android:background="@color/black333333"
            android:id="@+id/album_layout"
            android:layout_width="match_parent"
            android:layout_height="166dp">

            <ImageView
                android:id="@+id/iv_job_source"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />


            <ImageView
                android:id="@+id/ic_job_source_play_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:srcCompat="@mipmap/ic_btn_play" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/layoutContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layBox">

        <TextView
            android:id="@+id/tv_job_source_video_title"
            style="@style/TextBlack333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="16dp"
            android:text="标题"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_job_source_video_copy"
            style="@style/TextBlack333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_job_source_video_cope_bg"
            android:padding="6dp"
            android:text="复制链接"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/titleLayout"
        android:background="@color/commonBackground" />
</RelativeLayout>