<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground">
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_companylist_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black333333"
        android:text=""
        android:textSize="@dimen/sp_15"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="18dp"/>
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/item_companylist_tick_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_green_tick"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="28dp"
        android:visibility="gone"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_companylist_line_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commonLineHeight"
        android:background="@color/commonLineColor"
        android:layout_below="@+id/item_companylist_name_tv"
        android:visibility="visible"
        android:layout_alignLeft="@+id/item_companylist_name_tv"/>
</RelativeLayout>