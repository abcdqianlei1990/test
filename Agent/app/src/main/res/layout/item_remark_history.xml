<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/item_remark_history_circle"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/bg_green_circle"
        android:layout_marginLeft="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/item_remark_history_communicate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="沟通方式："
        android:textColor="@color/green29AC3E"
        android:textSize="@dimen/sp16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_remark_history_circle"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/item_remark_history_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black808080"
        android:textSize="@dimen/sp12"
        android:text=""
        app:layout_constraintTop_toTopOf="@+id/item_remark_history_communicate_tv"
        app:layout_constraintLeft_toRightOf="@+id/item_remark_history_communicate_tv"
        app:layout_constraintBottom_toBottomOf="@+id/item_remark_history_communicate_tv"
        android:layout_marginLeft="46dp"
        />
    <TextView
        android:id="@+id/item_remark_history_vertical_line"
        android:layout_width="@dimen/dp1"
        android:layout_height="0dp"
        android:background="@color/green29AC3E"
        app:layout_constraintLeft_toLeftOf="@+id/item_remark_history_circle"
        app:layout_constraintRight_toRightOf="@+id/item_remark_history_circle"
        app:layout_constraintTop_toBottomOf="@+id/item_remark_history_circle"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/item_remark_history_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black666666"
        android:textSize="@dimen/sp14"
        android:layout_marginRight="14dp"
        app:layout_constraintTop_toTopOf="@+id/item_remark_history_date_tv"
        app:layout_constraintRight_toRightOf="parent"
        android:text=""/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_remark_history_situation_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="具体情况："
        app:layout_constraintLeft_toLeftOf="@+id/item_remark_history_communicate_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_remark_history_communicate_tv"
        android:textColor="@color/black666666"
        android:textSize="@dimen/sp_15"
        android:visibility="visible"
        android:layout_marginTop="13dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_remark_history_situation_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintLeft_toLeftOf="@+id/item_remark_history_situation_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_remark_history_situation_title_tv"
        app:layout_constraintRight_toRightOf="@+id/item_remark_history_name_tv"
        android:textColor="@color/black666666"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="9dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="11dp"
        android:background="@color/blackF5F5F5"
        android:paddingRight="11dp"
        android:visibility="visible"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_remark_history_contentTitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="沟通记录："
        app:layout_constraintLeft_toLeftOf="@+id/item_remark_history_communicate_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_remark_history_situation_tv"
        android:textColor="@color/black666666"
        android:textSize="@dimen/sp_15"
        android:layout_marginTop="16dp"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/item_remark_history_content_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/sp12"
        android:textColor="@color/black666666"
        app:layout_constraintTop_toBottomOf="@+id/item_remark_history_contentTitle_tv"
        app:layout_constraintLeft_toLeftOf="@+id/item_remark_history_contentTitle_tv"
        app:layout_constraintRight_toRightOf="@+id/item_remark_history_name_tv"
        android:lineSpacingExtra="3dp"
        android:layout_marginTop="9dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="11dp"
        android:background="@color/blackF5F5F5"
        android:paddingRight="11dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@+id/item_remark_history_content_tv"
        app:layout_constraintLeft_toLeftOf="@+id/item_remark_history_content_tv"
        app:layout_constraintRight_toRightOf="@+id/item_remark_history_name_tv"
        />
</android.support.constraint.ConstraintLayout>