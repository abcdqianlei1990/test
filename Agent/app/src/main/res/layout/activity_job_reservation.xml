<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/commonBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/btn_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="@dimen/dp_50"
        android:padding="14dp">

        <TextView
            android:id="@+id/tv_address_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="请选择用户去哪"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp_16"
            tools:ignore="HardcodedText" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_address_arrow"
            android:layout_toRightOf="@+id/tv_address_hint"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="请选择地点"
                android:textColor="@color/black808080"
                android:textSize="@dimen/sp_14"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_detail_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/black808080"
                android:textSize="@dimen/sp_14"
                android:visibility="gone"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_address_arrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_right_arrow"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@color/commonLineColor" />

    <RelativeLayout
        android:id="@+id/btn_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:padding="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="请选择预约在哪天"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp_16"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            tools:ignore="RelativeOverlap,RtlHardcoded,UseCompoundDrawables">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="请选择预约在哪天"
                android:textColor="@color/black808080"
                android:textSize="@dimen/sp_14"
                tools:ignore="HardcodedText" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/ic_right_arrow"
                tools:ignore="ContentDescription" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/commonLineColor" />

    <TextView
        android:id="@+id/tv_activity_job_reservation_ready_apply_detail"
        style="@style/TextBlack333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="14dp"
        android:text="@string/activity_job_reservation_ready_apply_detail"
        android:textSize="14sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/btn_commit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/green29AC3E"
            android:gravity="center"
            android:text="提交预约"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            tools:ignore="HardcodedText" />
    </RelativeLayout>
</LinearLayout>