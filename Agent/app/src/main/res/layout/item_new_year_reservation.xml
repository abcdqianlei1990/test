<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tv_newyear_baseinfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginTop="20dp"
            android:text="--"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_newyear_phonecall_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_newyear_phonecall_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_blue_solid_with_2corner"
            android:paddingLeft="12dp"
            android:paddingTop="3dp"
            android:paddingRight="12dp"
            android:paddingBottom="3dp"
            android:text="电话"
            android:textColor="@color/blue577FCC"
            android:textSize="@dimen/sp13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginTop="20dp" />

        <TextView
            android:id="@+id/tv_newyear_reservation_time_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="报名时间"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp11"
            app:layout_constraintLeft_toLeftOf="@+id/tv_newyear_baseinfo"
            app:layout_constraintTop_toBottomOf="@+id/tv_newyear_baseinfo" />

        <TextView
            android:id="@+id/tv_newyear_reservation_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="--"
            android:textColor="@color/black808080"
            android:textSize="@dimen/sp11"
            app:layout_constraintLeft_toRightOf="@+id/tv_newyear_reservation_time_hint"
            app:layout_constraintTop_toTopOf="@+id/tv_newyear_reservation_time_hint" />

        <TextView
            android:id="@+id/tv_newyear_distribution_job_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="岗位名称"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp11"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="@+id/tv_newyear_reservation_time_hint"
            app:layout_constraintTop_toBottomOf="@+id/tv_newyear_reservation_time_hint" />

        <TextView
            android:id="@+id/tv_newyear_job_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="--"
            android:textColor="@color/black808080"
            android:textSize="@dimen/sp11"
            app:layout_constraintLeft_toRightOf="@+id/tv_newyear_distribution_job_name"
            app:layout_constraintTop_toTopOf="@+id/tv_newyear_distribution_job_name" />

        <TextView
            android:id="@+id/tv_newyear_job_desc_notice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="最近注记"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp11"
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="@+id/tv_newyear_distribution_job_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_newyear_distribution_job_name" />

        <TextView
            android:id="@+id/tv_newyear_job_notice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="--"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/black808080"
            android:textSize="@dimen/sp11"
            app:layout_constraintLeft_toRightOf="@+id/tv_newyear_job_desc_notice"
            app:layout_constraintRight_toLeftOf="@+id/tv_newyear_phonecall_btn"
            app:layout_constraintTop_toTopOf="@+id/tv_newyear_job_desc_notice" />
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>