<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/item_request_records_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/horizontal_margin"
            android:layout_marginTop="20dp"
            android:text="岗位名称"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_request_records_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="申请时间"
            android:textColor="@color/black808080"
            android:textSize="@dimen/sp11"
            app:layout_constraintLeft_toLeftOf="@+id/item_request_records_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/item_request_records_name_tv" />

        <TextView
            android:id="@+id/item_request_records_flag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:background="#DFEAFF"
            android:paddingBottom="2dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:paddingTop="2dp"
            android:text="周薪"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp11"
            app:layout_constraintRight_toLeftOf="@+id/item_request_records_flag2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginRight="@dimen/horizontal_margin" />

        <TextView
            android:id="@+id/item_request_records_flag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:background="#FFFAB8"
            android:paddingBottom="2dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:paddingTop="2dp"
            android:text="已申请"
            android:textColor="@color/black333333"
            android:textSize="@dimen/sp11"
            android:visibility="visible"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_request_records_yuyue_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="47dp"
            android:background="@drawable/bg_green_solid_green_stroke_4corner"
            android:padding="6dp"
            android:text="马上预约"
            android:textColor="@color/green29AC3E"
            android:textSize="@dimen/sp12"
            app:layout_constraintRight_toLeftOf="@+id/item_request_records_cancel_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginRight="@dimen/horizontal_margin" />

        <TextView
            android:id="@+id/item_request_records_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_marginTop="47dp"
            android:background="@drawable/bg_blue_solid_blue_stroke_4corner"
            android:padding="6dp"
            android:text="取消申请"
            android:textColor="@color/blue577FCC"
            android:textSize="@dimen/sp12"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_request_records_split_line"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="21dp"
            android:background="@color/commonBackground"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_request_records_date_tv" />
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>