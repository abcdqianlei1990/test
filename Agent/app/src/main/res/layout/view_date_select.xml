    <android.support.constraint.ConstraintLayout
        android:id="@+id/date_select_wheel_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/date_select_line1_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="@dimen/horizontal_margin"
        android:paddingRight="@dimen/horizontal_margin"

        >
        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/WheelView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/WheelView2"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="1"
            app:wheel_visible_item_count="3"
            app:wheel_selected_item_text_color="@color/green29AC3E"
            app:wheel_item_text_color="#D4EED8"
            app:wheel_item_text_size="@dimen/sp18"
            />
        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/WheelView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/WheelView1"
            app:layout_constraintRight_toLeftOf="@+id/WheelView3"
            app:layout_constraintHorizontal_weight="1"
            app:wheel_visible_item_count="3"
            app:wheel_selected_item_text_color="@color/green29AC3E"
            app:wheel_item_text_color="#D4EED8"
            app:wheel_item_text_size="@dimen/sp18"
            />
        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/WheelView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/WheelView2"
            app:layout_constraintRight_toLeftOf="@+id/WheelView4"
            app:layout_constraintHorizontal_weight="1"
            app:wheel_visible_item_count="3"
            app:wheel_selected_item_text_color="@color/green29AC3E"
            app:wheel_item_text_color="#D4EED8"
            app:wheel_item_text_size="@dimen/sp18"/>
        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/WheelView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/WheelView3"
            app:layout_constraintRight_toLeftOf="@+id/WheelView5"
            app:layout_constraintHorizontal_weight="1"
            app:wheel_visible_item_count="3"
            app:wheel_selected_item_text_color="@color/green29AC3E"
            app:wheel_item_text_color="#D4EED8"
            app:wheel_item_text_size="@dimen/sp18"/>
        <com.aigestudio.wheelpicker.WheelPicker
            android:id="@+id/WheelView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/WheelView4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:wheel_visible_item_count="3"
            app:wheel_selected_item_text_color="@color/green29AC3E"
            app:wheel_item_text_color="#D4EED8"
            app:wheel_item_text_size="@dimen/sp18"/>
    </android.support.constraint.ConstraintLayout>
    <TextView
        android:id="@+id/date_select_line2_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/commonLineColor"
        app:layout_constraintTop_toBottomOf="@+id/date_select_wheel_group"/>
    <TextView
        android:id="@+id/date_select_neg_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textColor="@color/black333333"
        android:textSize="@dimen/sp18"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/date_select_line2_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/date_select_guideLine_tv"
        />
    <TextView
        android:id="@+id/date_select_guideLine_tv"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/date_select_line2_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/date_select_pos_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textColor="@color/green29AC3E"
        android:textSize="@dimen/sp18"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/date_select_line2_tv"
        app:layout_constraintLeft_toRightOf="@+id/date_select_guideLine_tv"
        app:layout_constraintRight_toRightOf="parent"

        />
</android.support.constraint.ConstraintLayout>