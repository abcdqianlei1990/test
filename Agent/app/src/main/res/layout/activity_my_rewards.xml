<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/commonBackground"
    android:orientation="vertical">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_my_rewards_title_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_my_rewards_entryReward_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入职提成"
            android:textColor="@color/green29AC3E"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingTop="15dp"
            android:paddingBottom="12dp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintRight_toLeftOf="@+id/activity_my_rewards_curLvReward_title_tv"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_my_rewards_entryReward_indicator_tv"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_my_rewards_entryReward_title_tv"
            app:layout_constraintLeft_toLeftOf="@+id/activity_my_rewards_entryReward_title_tv"
            app:layout_constraintRight_toRightOf="@+id/activity_my_rewards_entryReward_title_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/tabIndicatorColor"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:visibility="visible"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_my_rewards_curLvReward_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务报酬"
            android:textColor="@color/green29AC3E"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/activity_my_rewards_entryReward_title_tv"
            android:paddingTop="15dp"
            android:paddingBottom="12dp"
            app:layout_constraintRight_toLeftOf="@+id/activity_my_rewards_lowerLvReward_title_tv"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_my_rewards_curLvReward_indicator_tv"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_my_rewards_curLvReward_title_tv"
            app:layout_constraintLeft_toLeftOf="@+id/activity_my_rewards_curLvReward_title_tv"
            app:layout_constraintRight_toRightOf="@+id/activity_my_rewards_curLvReward_title_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/tabIndicatorColor"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:visibility="gone"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_my_rewards_lowerLvReward_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="培训津贴"
            android:textColor="@color/green29AC3E"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/activity_my_rewards_firstReward_title_tv"
            app:layout_constraintLeft_toRightOf="@+id/activity_my_rewards_curLvReward_title_tv"
            android:paddingTop="15dp"
            android:paddingBottom="12dp"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_my_rewards_lowerLvReward_indicator_tv"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_my_rewards_lowerLvReward_title_tv"
            app:layout_constraintLeft_toLeftOf="@+id/activity_my_rewards_lowerLvReward_title_tv"
            app:layout_constraintRight_toRightOf="@+id/activity_my_rewards_lowerLvReward_title_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/tabIndicatorColor"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:visibility="gone"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_my_rewards_firstReward_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开单奖励"
            android:textColor="@color/green29AC3E"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/activity_my_rewards_lowerLvReward_title_tv"
            android:paddingTop="15dp"
            android:paddingBottom="12dp"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_my_rewards_firstReward_indicator_tv"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_my_rewards_firstReward_title_tv"
            app:layout_constraintLeft_toLeftOf="@+id/activity_my_rewards_firstReward_title_tv"
            app:layout_constraintRight_toRightOf="@+id/activity_my_rewards_firstReward_title_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/tabIndicatorColor"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:visibility="gone"
            />
    </android.support.constraint.ConstraintLayout>

    <!--月份筛选按钮-->
    <LinearLayout
        android:id="@+id/activity_my_rewards_month_filter_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/activity_my_rewards_title_group">
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/activity_my_rewards_month_filter_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black666666"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="19dp"/>
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_triangle_down_black"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <!--该月总收入-->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/activity_my_rewards_totalMonthReward_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收入：￥元"
        android:textColor="@color/black666666"
        android:textSize="@dimen/sp_14"
        android:layout_alignTop="@+id/activity_my_rewards_month_filter_group"
        android:layout_alignBottom="@+id/activity_my_rewards_month_filter_group"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        />
    <!--入职提成列表-->
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/activity_my_rewards_entrySmartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:visibility="visible"
        android:layout_below="@+id/activity_my_rewards_month_filter_group">
        <com.ye.widget.StatusLayout
            android:id="@+id/activity_my_rewards_entryStatusLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:visibility="visible"
                android:id="@+id/activity_my_rewards_list_entry"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/commonBackground"/>
        </com.ye.widget.StatusLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <!--本机提成列表-->
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/activity_my_rewards_curSmartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:visibility="gone"
        android:layout_below="@+id/activity_my_rewards_month_filter_group">
        <com.ye.widget.StatusLayout
            android:id="@+id/activity_my_rewards_curStatusLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:visibility="visible"
                android:id="@+id/activity_my_rewards_list_cur"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/commonBackground"/>
        </com.ye.widget.StatusLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <!--培训津贴列表-->
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/activity_my_rewards_lowerSmartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:visibility="gone"
        android:layout_below="@+id/activity_my_rewards_month_filter_group">
        <com.ye.widget.StatusLayout
            android:id="@+id/activity_my_rewards_lowerStatusLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:visibility="visible"
                android:id="@+id/activity_my_rewards_list_lower"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/commonBackground"
                />
        </com.ye.widget.StatusLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <!--首单提成列表-->
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/activity_my_rewards_firstSmartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:visibility="gone"
        android:layout_below="@+id/activity_my_rewards_month_filter_group">
        <com.ye.widget.StatusLayout
            android:id="@+id/activity_my_rewards_firstStatusLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:visibility="visible"
                android:id="@+id/activity_my_rewards_list_first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/commonBackground"
                />
        </com.ye.widget.StatusLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</RelativeLayout>