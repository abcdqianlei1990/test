<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/commonBackground"
    android:paddingBottom="12dp">
    <LinearLayout
        android:id="@+id/pop_reward_datepick_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <cn.xzj.agent.widget.MyWheelView
            android:id="@+id/pop_reward_datepick_yearWheelView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <cn.xzj.agent.widget.MyWheelView
            android:id="@+id/pop_reward_datepick_monthWheelView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/pop_reward_datepick_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/pop_reward_datepick_group"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="取 消"
        android:textColor="@color/black999999"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="12dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:background="@color/white"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintRight_toLeftOf="@+id/pop_reward_datepick_submit_btn"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/pop_reward_datepick_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/pop_reward_datepick_cancel_btn"
        app:layout_constraintBottom_toBottomOf="@+id/pop_reward_datepick_cancel_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/pop_reward_datepick_cancel_btn"
        android:text="确 定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:background="@color/green29AC3E"/>

</android.support.constraint.ConstraintLayout>